        <div class="col-sm-6" id="age_onset_chart"></div>
      </div>
      <hr>
      <!--<h6 class="text-center" style="padding-bottom:15px;text-decoration: underline;padding-left:100px;">Applies to all study participants</h6>-->

      <div class="row">
        <div class="col-sm-6" id="sex_chart"></div>
        <div class="col-sm-6" id="race_chart"></div>
      </div>

      <div class="row">
