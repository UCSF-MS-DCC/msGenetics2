        <div class="col-sm-6"></div>
        <div class="col-sm-6"></div>
      </div>

      <div class="row">
        <div class="col-sm-6" id="disease_course_chart"></div>
        <div class="col-sm-6" id="age_onset_chart"></div>
      </div>

      <hr>

      <div class="row">
        <div class="col-sm-6" id="sex_chart"></div>
        <div class="col-sm-6" id="race_chart"></div>
      </div>

      <div class="row">
        <div class="col-sm-12 text-right">
          <button id="resetDashboard" class="btn btn-sm btn-action" >Reset Dashboard</button>
        </div>
      </div>

    </div>
  </div>

</div>

